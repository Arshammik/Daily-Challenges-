#!/use/bin/python

# Euler Project Chalenge

# Problem Number 1

sum = 0

for a in range(334):
    three = a * 3
    sum = sum + three
    

for b in range(200):
    five = b * 5
    sum = sum + five
    

for c in range(67):
    fifteen = c * 15
    sum = sum - fifteen
    

print(sum)

## better version 


def Zaeib_3_or_5(n):
    if n % 3 == 0 or n % 5 ==0:
        return True
    else:
        return False

sum = 0 

for i in range (1,1000):
    if Zaeib_3_or_5(i) == True:
        sum = sum + i

print(sum)

